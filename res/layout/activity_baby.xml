<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_height="match_parent"
             android:layout_width="match_parent">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/baby_background"
            android:alpha="0.8"
            android:gravity="bottom"/>
    <Button
            android:id="@+id/babyBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/selectors_petback_button"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom">


        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp">
            <Button
                    android:id="@+id/petChick"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="80dp"
                    android:alpha="1"
                    android:background="@drawable/selectors_chick_button"/>
            <Button
                    android:id="@+id/petDog"
                    android:layout_width="130dp"
                    android:layout_height="115dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/petChick"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="30dp"
                    android:alpha="1"
                    android:background="@drawable/selectors_dog_button"/>
            <Button
                    android:id="@+id/petSunFlower"
                    android:layout_width="100dp"
                    android:layout_height="160dp"
                    android:layout_below="@id/petChick"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:alpha="1"
                    android:background="@drawable/selectors_sunflower_button"/>

        </RelativeLayout>

    </LinearLayout>
</FrameLayout>

