<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/login_background"
              android:paddingLeft="20dp"
              android:paddingRight="20dp">
    <ImageView
            android:layout_margin="80dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/head_photo"
            android:scaleType="centerInside"/>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">
        <EditText
                android:id="@+id/login_user"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:paddingLeft="15dp"
                android:background="@drawable/edit_top_corner"
                android:hint="用户名（手机/邮箱）"
                android:singleLine="true"/>
        <EditText
                android:id="@+id/login_pwd"
                android:layout_height="40dp"
                android:layout_width="fill_parent"
                android:background="@drawable/edit_bottom_corner"
                android:hint="密码"
                android:password="true"
                android:singleLine="true"
                android:paddingLeft="15dp"/>
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="40dp"
                      android:gravity="center">
            <CheckBox android:id="@+id/login_check"
                    android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="   是否记住用户名和密码"/>
        </LinearLayout>

        <Button
                android:id="@+id/login"
                android:layout_width="fill_parent"
                android:layout_marginTop="5dp"
                android:layout_height="40dp"
                android:textColor="@color/orange"
                android:textSize="20sp"
                android:text="登     录"
                android:background="@drawable/selectors_login_button"/>
    </LinearLayout>
</LinearLayout>