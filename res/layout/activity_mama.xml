<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/mama_activity"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/mama_background">
    <include layout="@layout/include_radiogroup"/>
    <ImageView android:id="@+id/divide"
               android:layout_width="fill_parent"
               android:layout_height="5dp"
               android:background="@color/orange"/>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="18dp"
            android:layout_marginLeft="18dp"
            android:layout_weight="5"
            android:orientation="horizontal">
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:background="@drawable/edit_corner"
                android:layout_weight="3"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/state_tex"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="5"
                    android:text="品德现状:"
                    android:gravity="center_vertical"
                    android:textSize="25sp"
                    android:textColor="@color/orange"/>
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="4">
                <TextView
                        android:id="@+id/grade_num1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:text="0"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/edit_corner2"/>
                <TextView
                        android:id="@+id/grade_num2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:text="0"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/edit_corner2"/>
                <TextView
                        android:id="@+id/grade_num3"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:text="0"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/edit_corner2"/>
                <TextView
                        android:id="@+id/grade_num4"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:text="0"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/edit_corner2"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:id="@+id/new_task"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:background="@drawable/selectors_new_record"
                android:layout_weight="4">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/new_record_img"
                    android:drawablePadding="8dp"
                    android:text="新建记录"
                    android:textSize="18sp"
                    android:textColor="@color/white"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:layout_weight="2"
                  android:layout_marginRight="18dp"
                  android:layout_marginLeft="18dp"
                  android:orientation="vertical">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="历 史 记 录"
                android:textSize="25sp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/edit_corner2"/>

        <me.ahfun.mmbaby.widget.IndexableListView
                android:id="@+id/history_item"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:divider="@null"
                  android:dividerHeight="2dp"
                  android:cacheColorHint="#00000000"
                  android:scrollbars="none"/>
    </LinearLayout>
</LinearLayout>