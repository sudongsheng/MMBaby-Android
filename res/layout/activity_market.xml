<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/market_linearLayout"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="center_horizontal"
              android:background="@drawable/market_bg">
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3">
        <Button
                android:id="@+id/marketBack"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/selectors_petback_button"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="right"
                      android:layout_marginRight="20dp"
                      android:gravity="center"
                      android:orientation="horizontal">
            <TextView android:id="@+id/money_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="金币"
                    android:textSize="25sp"
                    android:textColor="@color/black"/>
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/money_icon"/>
            <TextView android:id="@+id/moneyTextView"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="1000"
                      android:textSize="25sp"
                      android:textColor="@color/black"/>
        </LinearLayout>


        <GridView
                android:id="@+id/goodsGridView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:numColumns="2"
                android:columnWidth="5dp"
                android:horizontalSpacing="10dp"
                android:verticalSpacing="10dp"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"
                android:stretchMode="columnWidth"/>

    </LinearLayout>


</LinearLayout>