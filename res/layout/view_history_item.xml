<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/edit_corner"
              android:padding="5dp"
              android:minHeight="?android:attr/listPreferredItemHeight">
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:id="@+id/history_item_time"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:textColor="@color/white"
                  android:textSize="25sp"
                  android:layout_weight="2"
                  android:background="@drawable/edit_corner2"/>
        <TextView android:id="@+id/history_item_title"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:textColor="@color/black"
                  android:layout_marginLeft="5dp"
                  android:maxLines="2"
                  android:gravity="center"
                  android:textSize="25sp"
                  android:layout_weight="1"
                  android:background="@drawable/edit_corner"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/photo_linear"
                  android:layout_width="fill_parent"
                  android:layout_height="65dp"
                  android:orientation="horizontal"
                  android:layout_marginTop="5dp"
                  android:background="@drawable/edit_corner">
        <ImageView
                android:id="@+id/photo0"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitStart"
                android:layout_margin="5dp"
                android:layout_weight="1"/>
        <ImageView
                android:id="@+id/photo1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:scaleType="fitStart"
                android:layout_weight="1"/>
        <ImageView
                android:id="@+id/photo2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:scaleType="fitStart"
                android:layout_weight="1"/>
        <ImageView
                android:id="@+id/photo3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:scaleType="fitStart"
                android:layout_weight="1"/>
        <ImageView
                android:id="@+id/photo4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:scaleType="fitStart"
                android:layout_weight="1"/>
        <ImageView
                android:id="@+id/photo5"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:scaleType="fitStart"
                android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>

